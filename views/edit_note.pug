extends layout

block content
  .container(min-width: 576px)
    form(method='POST', action='/notes/edit/'+note.id)
      p
      #form-group
        label Title:
        input.form-control(name='title', type='text', value=note.title)
      p
      #form-group
        label Author:
        input.form-control(name='author', type='text', value=user.name)
      p
      #form-group
        label Body:
        textarea.form-control(name='body')= note.body
      p
      input.btn.btn-secondary(type='submit', value='Submit')